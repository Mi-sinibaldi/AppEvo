<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.funcionario.FuncionarioFragment"
        android:background="@color/colorPrimary">


    <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="206dp"
            android:id="@+id/constraintLayout"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="4dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/recyclerView">

        <TextView
                android:id="@+id/TextViewSubFuncionario"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="39dp"
                android:layout_marginEnd="37dp"
                android:textAlignment="textStart"

                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                android:text="Cadastro de novos funcionários"
                android:layout_marginTop="9dp" app:layout_constraintTop_toBottomOf="@+id/TextViewDepto"
                android:textColor="#FFFFFF" android:layout_marginBottom="32dp"
                app:layout_constraintBottom_toTopOf="@+id/buttonAddDpto" app:layout_constraintVertical_bias="0.0"/>


        <Button
                android:text="+ Add novo funcionário"
                android:background="@drawable/button_customized_depto"
                android:layout_width="290dp"
                android:textAllCaps="false"
                android:layout_height="46dp"
                android:id="@+id/buttonAddDpto" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:textColor="#FFFFFF" app:layout_constraintHorizontal_bias="0.495"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="40dp"/>

    </android.support.constraint.ConstraintLayout>
    <TextView
            android:id="@+id/textViewFuncionario"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="37dp"
            android:layout_marginEnd="37dp"
            android:textAlignment="textStart"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Funcionário"
            android:textStyle="bold"
            app:layout_constraintHorizontal_bias="1.0" android:textColor="#FFFFFF"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="34dp"/>

    <android.support.v7.widget.RecyclerView
            android:layout_width="395dp"
            android:layout_height="433dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/recyclerView" app:layout_constraintBottom_toBottomOf="parent"
    />
</android.support.constraint.ConstraintLayout>