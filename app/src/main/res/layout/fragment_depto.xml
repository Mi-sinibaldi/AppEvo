<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragments.departamento.DeptoFragment"
        android:background="@color/colorPrimary">

    <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="206dp"
            android:id="@+id/constraintLayout"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toTopOf="@+id/recyclerViewFunc" app:layout_constraintVertical_bias="0.0">

        <TextView
                android:id="@+id/TextViewSubFuncionario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="textStart"

                android:textSize="12sp"
                android:text="Cadastro de novos Departamentos"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="48dp" app:layout_constraintBottom_toTopOf="@+id/buttonAddDepto"
                android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintTop_toBottomOf="@+id/TextViewDepto"/>

        <TextView
                android:id="@+id/TextViewDepto"
                android:layout_width="189dp"
                android:layout_height="33dp"
                android:textAlignment="textStart"
                android:textSize="25sp"
                android:text="Departamento"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/TextViewSubFuncionario"
                app:layout_constraintVertical_bias="0.781" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"/>

        <Button
                android:text="+ Add novo departamento"
                android:background="@drawable/button_customized_depto"
                android:layout_width="290dp"
                android:textAllCaps="false"
                android:layout_height="46dp"
                android:id="@+id/buttonAddDepto" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:textColor="#FFFFFF" app:layout_constraintHorizontal_bias="0.495"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"/>

    </android.support.constraint.ConstraintLayout>

    <android.support.v7.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="391dp"
            tools:listitem="@layout/activity_adapter_depto2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/recyclerViewFunc"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout" android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"/>

</android.support.constraint.ConstraintLayout>