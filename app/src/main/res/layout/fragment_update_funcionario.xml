<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent"
        tools:context=".fragments.funcionario.UpdateFuncionarioFragment"
        android:background="@color/colorPrimary">

    <TextView
            android:text="Novo FuncionÃ¡rio"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewFuncionario"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:textColor="#FFFFFF"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="36dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/editTextNome" app:layout_constraintVertical_bias="0.009"
            app:layout_constraintHorizontal_bias="0.51"/>

    <EditText
            android:layout_width="0dp"
            android:layout_height="67dp"
            android:inputType="textPersonName"
            android:hint="Nome:"
            android:textColorHint="@color/colorWhite"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:id="@+id/editTextNome" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="24dp" app:layout_constraintBottom_toTopOf="@+id/editTextRg"
            app:layout_constraintHorizontal_bias="1.0"/>

    <EditText
            android:layout_width="0dp"
            android:layout_height="67dp"
            android:inputType="textPersonName"
            android:hint="RG:"
            android:textColorHint="@color/colorWhite"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:id="@+id/editTextRg" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0" android:textColor="#FFFFFF"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toTopOf="@+id/spinner_type_activity_project"/>

    <Button
            android:text="Salvar"
            android:layout_width="192dp"
            android:layout_height="51dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/button"
            android:background="@drawable/button_customized_depto"
            app:layout_constraintHorizontal_bias="0.552"
            android:textColor="#FFFFFF"
            android:textAllCaps="false" app:layout_constraintBottom_toTopOf="@+id/buttonCancelarFunc"
            android:layout_marginBottom="28dp"/>


    <ImageView
            android:layout_width="113dp"
            android:layout_height="108dp"
            tools:src="@drawable/ic_notifications_black_24dp"
            android:id="@+id/imageView" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewFuncionario"/>
    <Spinner
            android:id="@+id/spinner_type_activity_project"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/spinner_custon"
            android:focusableInTouchMode="false"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginBottom="28dp"
            app:layout_constraintBottom_toTopOf="@+id/button"/>
    <Button
            android:text="@android:string/cancel"
            android:layout_width="192dp"
            android:layout_height="51dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/colorWhite"
            android:background="@drawable/button_customized_depto"
            android:id="@+id/buttonCancelarFunc" android:layout_marginBottom="36dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.552"/>


</android.support.constraint.ConstraintLayout>